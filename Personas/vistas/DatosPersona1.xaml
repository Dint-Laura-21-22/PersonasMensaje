<UserControl x:Class="Personas.vistas.DatosPersona1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personas.vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel  Orientation="Vertical" Margin="10">
        <TextBlock Text="Nombre"></TextBlock>
        <TextBox IsReadOnly="True" Text="{Binding Path=PersonaSeleccionada.Nombre}"></TextBox>
        <TextBlock Text="Edad"></TextBlock>
        <TextBox IsReadOnly="True"
                 Text="{Binding Path=PersonaSeleccionada.Edad}"></TextBox>
        <TextBlock Text="Nacionalidad"></TextBlock>
        <TextBox IsReadOnly="True"
                 Text="{Binding Path=PersonaSeleccionada.Nacionalidad}"></TextBox>
    </StackPanel>
</UserControl>
